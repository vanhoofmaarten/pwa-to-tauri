{
  "name": "@mrtnvh/pwa-to-tauri",
  "version": "0.1.1",
  "description": "CLI tool to wrap PWAs in Tauri desktop apps",
  "main": "index.js",
  "bin": "./dist/index.js",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "dev": "npm run build -- --watch",
    "build": "rimraf dist && esbuild src/index.ts --bundle --outdir=dist --platform=node --target=node18 --format=esm --splitting --packages=external",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "pwa",
    "tauri"
  ],
  "author": "@mrtnvh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vanhoofmaarten/pwa-to-tauri"
  },
  "dependencies": {
    "execa": "^7.0.0",
    "fs-extra": "^11.1.0",
    "home-or-tmp": "^4.0.0",
    "inquirer": "^9.1.4",
    "lodash-es": "^4.17.21",
    "node-html-parser": "^6.1.5",
    "ora": "^6.1.2",
    "tmp-promise": "^3.0.3",
    "typescript": "^4.9.5",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/lodash": "^4.14.191",
    "@types/lodash-es": "^4.17.6",
    "esbuild": "^0.17.11",
    "rimraf": "^4.3.1",
    "tmp": "^0.2.1",
    "utility-types": "^3.10.0"
  }
}
